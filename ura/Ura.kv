<My_manager>:
    MenuScreen:
    CreateUra:

<MenuScreen>:
    name: 'Menu'
    GridLayout:   
        cols: 1
        padding: 10
        spacing: 12
        row_force_default: True
        row_default_height: '32dp'

        Image: 
            source:'images/talkeen.png'

        Label:
            text: 'Escolha o tipo de ura que deseja'
            font_size: 20
            spacing: 50

        BoxLayout:
            Label:
                text: 'Localizacao'
            CheckBox:
                id: type_localizacao
                group: 'type_ura'
            Label:
                text: 'Preventiva'
            CheckBox:
                id: type_preventiva
                group: 'type_ura'

            Label:
                text: 'Negociacao'
            CheckBox:
                id: type_negociacao
                group: 'type_ura'

        Button:
            text: 'Ok'
            size_hint_x: None
            size: 200,200
            on_release: root.checkUraType();root.manager.current = root.type_ura

        Label:
            text: root.error_text

<CreateUra>:
    name: 'localizacao'
    GridLayout:   
        cols: 1
        padding: 10
        spacing: 10
        row_force_default: True
        row_default_height: '32dp'

        Image: 
            source:'images/talkeen.png'

        BoxLayout:
            Label: 
                text: 'Contexto:'
            TextInput: 
                hint_text: 'Contexto da ura'
                focus: True
                multiline: False
                cursor_color: (0, 0, 0, 0.8)
                id: context_input

        BoxLayout:
            Label: 
                text: 'Nome da ura:'
            TextInput: 
                hint_text: 'Nome do arquivo da ura'
                multiline: False
                cursor_color: (0, 0, 0, 0.8)
                id: ura_file_name

        BoxLayout:
            Label:
                text: 'IP:'
            TextInput:
                hint_text: 'IP do servidor'
                multiline: False
                cursor_color: (0, 0, 0, 0.8)
                id: ip_input

        BoxLayout:
            Label:
                text: 'Path:'
            TextInput:
                hint_text: 'Diretorio dos audios globais'
                multiline: False
                cursor_color: (0, 0, 0, 0.8)
                id: path_input

        BoxLayout:
            Label:
                text: 'Custom path:'
            TextInput:
                hint_text: 'Diretorio dos audios customizados'
                multiline: False
                cursor_color: (0, 0, 0, 0.8)
                id: custom_path_input

        BoxLayout:
            Label:
                text: 'Debug mode'
            CheckBox:
                id: check_debug

        Button:
            id: gender
            text: root.button_text
            on_release: root.dropdown.open(self)
            size_hint_y: None
            height: '32dp'


        Button:
            text: 'Create Ura'
            id: bt_create
            size_hint_x: None
            size: 200,200
            on_press: root.uraConfig()
            on_release: root.clear_inputs([context_input, ura_file_name, ip_input, custom_path_input, path_input])

<CustomDropDown>:
    padding: 10
    spacing: 10

    Button:
        id: female
        background_color: (0, 0.01, 0.3, 0)
        text: 'Female'
        size_hint_y: None
        height: 28
        on_release: root.select('Female')
        
    Button:
        id:male
        background_color: (0, 0.01, 0.3, 0)
        text: 'Male'
        size_hint_y: None
        height: 28
        on_release: root.select('Male')
        