<TabbedPanelStrip>
    canvas:
        Color:
            rgba: (0, 1, 0, 1)

<Pesquisa>
    name: 'pesquisa'

    TabbedPanel:
        do_default_tab: False
        tab_height: 35
        tab_width: 150
        background_color: (0, 0.07, 0.2, 0)
        border: [0, 0, 0, 0]
        TabbedPanelItem:
            text: 'Ura Pesquisa'
            GridLayout:   
                cols: 1
                padding: 10
                spacing: 10
                row_force_default: True
                row_default_height: '32dp'

                Image: 
                    source:'images/talkeen.png'

                Label:
                    text: 'Ura de Pesquisa'

                BoxLayout:
                    Label: 
                        text: 'Nome do arquivo:'
                    TextInput: 
                        hint_text: 'Nome do arquivo da ura'
                        multiline: False
                        cursor_color: (0, 0, 0, 0.8)
                        id: ura_file_name
                        on_text_validate: context_input.focus=True

                BoxLayout:
                    Label: 
                        text: 'Contexto:'
                    TextInput: 
                        hint_text: 'Contexto da ura'
                        focus: True
                        multiline: False
                        cursor_color: (0, 0, 0, 0.8)
                        id: context_input
                        on_text_validate: ip_input.focus=True

                BoxLayout:
                    Label:
                        text: 'IP:'
                    TextInput:
                        hint_text: 'IP do servidor'
                        multiline: False
                        cursor_color: (0, 0, 0, 0.8)
                        id: ip_input
                        on_text_validate: path_input.focus=True

                BoxLayout:
                    Label:
                        text: 'Path:'
                    TextInput:
                        hint_text: 'Diretorio dos audios globais'
                        multiline: False
                        cursor_color: (0, 0, 0, 0.8)
                        id: path_input
                        on_text_validate: custom_path_input.focus=True

                BoxLayout:
                    Label:
                        text: 'Custom path:'
                    TextInput:
                        hint_text: 'Diretorio dos audios customizados'
                        multiline: False
                        cursor_color: (0, 0, 0, 0.8)
                        id: custom_path_input

                BoxLayout:
                    Label:
                        text: 'Debug mode'
                    CheckBox:
                        id: check_debug

                Label:
                    text: 'Transferencia'

                BoxLayout:
                    Label:
                        text: 'Aspect'
                    CheckBox:
                        id: type_aspect
                        group: 'type_transferencia'

                    Label:
                        text: 'Olos'
                    CheckBox:
                        id: type_olos
                        group: 'type_transferencia'

                    Label:
                        text: 'Talkeen'
                    CheckBox:
                        id: type_talkeen
                        group: 'type_transferencia'

                    Label:
                        text: 'Nenhum'
                    CheckBox:
                        id: type_nenhum
                        group: 'type_transferencia'

                Button:
                    id: gender
                    text: root.button_text
                    on_release: root.dropdown.open(self)
                    size_hint_y: None
                    height: '32dp'


                Button:
                    text: 'Create Ura'
                    id: bt_create
                    size_hint_x: None
                    size: 200,200
                    on_press: root.uraConfig()
                    on_release: app.clear_inputs([context_input, ura_file_name, ip_input, custom_path_input, path_input])
        TabbedPanelItem:
            text: 'Recvoz Settings'
            GridLayout:   
                cols: 1
                padding: 20
                spacing: 20
                row_force_default: True
                row_default_height: '32dp'

                Image: 
                    source:'images/talkeen.png'
                Label:
                    text: ' Configuracao do recvoz de Pesquisa'
                BoxLayout:
                    Label:
                        text: 'Before speech timeout'
                    TextInput: 
                        hint_text: 'before speech timeout'
                        focus: True
                        multiline: False
                        cursor_color: (0, 0, 0, 0.8)
                        id: before_speech
                        on_text_validate: after_speech.focus=True
                BoxLayout:
                    Label:
                        text: 'After speech timeout'
                    TextInput: 
                        hint_text: 'After speech timeout'
                        focus: True
                        multiline: False
                        cursor_color: (0, 0, 0, 0.8)
                        id: after_speech

                BoxLayout:
                    Label:
                        text: 'Incomplete timeout'
                    TextInput: 
                        hint_text: 'Incomplete timeout'
                        focus: True
                        multiline: False
                        cursor_color: (0, 0, 0, 0.8)
                        id: incomplete_speech
                        on_text_validate: after_speech.focus=True
                BoxLayout:
                    Label:
                        text: 'Max speech timeout'
                    TextInput: 
                        hint_text: 'Max speech timeout'
                        focus: True
                        multiline: False
                        cursor_color: (0, 0, 0, 0.8)
                        id: max_speech
                    
                BoxLayout:     
                    Label:
                        height: '32dp'
                        text: 'Confidence level:   ' + str(round(confidence_level.value_normalized, 2))
                    Slider:
                        size_hint_x: 0.8
                        min: 0
                        max: 1
                        value: 0.66
                        value_track: True
                        value_track_color: [1.1, 1, 1, 1]
                        focus: True
                        id: confidence_level

                BoxLayout:
                    Label: 
                        text: 'Barge in'
                    CheckBox:
                        id: barge_in